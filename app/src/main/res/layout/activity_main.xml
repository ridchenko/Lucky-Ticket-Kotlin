<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnCheckNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etTicketNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="40dp"
        android:onClick="fnCheckTicket"
        android:text="@string/button"
        tools:ignore="MissingConstraints,OnClick,UsingOnClickInXml" />

    <EditText
        android:id="@+id/etTicketNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="40dp"
        android:layout_below="@id/imgLight"
        android:layout_marginTop="50dp"
        android:hint="@string/hint"
        android:inputType="numberSigned"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imgLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_below="@id/imgTopImage"
        android:src="@drawable/gray_light" />

    <ImageView
        android:id="@+id/imgTopImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        app:srcCompat="@android:drawable/ic_dialog_email" />
</RelativeLayout>
